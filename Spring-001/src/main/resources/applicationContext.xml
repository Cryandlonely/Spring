<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--
        任何类型注入条件：
                      需要创建的类中必须有set方法与无参构造方法(也可不写，默认存在)
    -->
    <!--简单类型注入-->
    <bean id="student" class="org.example.domain.Student">
        <property name="name" value="li"></property>
        <property name="id" value="123"></property>
    </bean>
    <bean id="school" class="org.example.domain.School">
        <property name="name" value="li"></property>
        <property name="address" value="hebei"></property>
    </bean>
    <!--引用类型注入-->
    <bean id="student01" class="org.example.domain.Student01">
        <property name="name" value="zhang"></property>
        <property name="id" value="789"></property>
        <property name="school" ref="school"></property>
    </bean>
    <!--使用构造方法参数名称注入(顺序可以颠倒)-->
    <bean id="student02" class="org.example.domain.Student02">
        <constructor-arg name="name" value="张三"></constructor-arg>
        <constructor-arg name="id" value="666"></constructor-arg>
        <constructor-arg name="school" ref="school"></constructor-arg>
    </bean>
    <!--使用构造方法参数下标注入(顺序可以颠倒)-->
    <bean id="student03" class="org.example.domain.Student02">
        <constructor-arg index="0" value="张三"></constructor-arg>
        <constructor-arg index="1" value="666"></constructor-arg>
        <constructor-arg index="2" ref="school"></constructor-arg>
    </bean>
    <!--使用构造方法参数默认顺序注入(顺序不能颠倒)-->
    <bean id="student04" class="org.example.domain.Student02">
        <constructor-arg value="张三"></constructor-arg>
        <constructor-arg value="666"></constructor-arg>
        <constructor-arg ref="school"></constructor-arg>
    </bean>

</beans>